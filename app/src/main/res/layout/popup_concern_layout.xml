<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_pupo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_5"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_headImg"
        android:layout_width="@dimen/width_55"
        android:layout_height="@dimen/height_55"
        android:src="@drawable/icon_head"
        android:layout_marginLeft="@dimen/margin_70"
        android:layout_marginTop="@dimen/margin_10"
        />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="郭旭"
            android:layout_alignTop="@id/iv_headImg"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_toRightOf="@id/iv_headImg"
            android:layout_marginLeft="@dimen/margin_25"
            android:textColor="@color/color_595959"
            android:textSize="@dimen/text_size_16"
            android:ellipsize="middle"
            android:singleLine="true"
            android:layout_marginRight="@dimen/margin_15"
            />
        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="guoxu"
            android:layout_toRightOf="@id/iv_headImg"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_alignBottom="@id/iv_headImg"
            android:layout_marginBottom="@dimen/margin_4"
            android:textColor="@color/color_A6A6A6"
            android:textSize="@dimen/text_size_14"
            />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_0_5"
            android:background="@color/color_E6E6E6"
            android:layout_margin="@dimen/margin_15"
            android:layout_below="@id/iv_headImg"
            />



    <LinearLayout
        android:id="@+id/rlInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/view"
        android:layout_alignLeft="@id/iv_headImg"
        android:layout_marginRight="@dimen/margin_70"
        android:layout_marginBottom="@dimen/margin_10"
        >

        <LinearLayout
            android:layout_width="@dimen/width_0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tvStateTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0"
                android:layout_weight="1"
                android:text="任务状态"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_8C8C8C"
                />

            <TextView
                android:id="@+id/tv_phone_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0"
                android:layout_weight="1"
                android:text="联系电话"
                android:layout_marginTop="@dimen/margin_10"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_8C8C8C"
                />

            <TextView
                android:id="@+id/tv_deptName_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0"
                android:layout_weight="1"
                android:text="部         门"
                android:layout_marginTop="@dimen/margin_10"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_8C8C8C"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/width_0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tvState"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0"
                android:layout_weight="1"
                android:text="任务状态"
                android:gravity="right"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_595959"
                />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0"
                android:layout_weight="1"
                android:gravity="right"
                android:text="联系电话"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_595959"
                android:layout_marginTop="@dimen/margin_10"
                />

            <TextView
                android:id="@+id/tv_deptName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0"
                android:layout_weight="1"
                android:text="部         门"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_595959"
                android:gravity="right"
                android:layout_marginTop="@dimen/margin_10"
                />

        </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:id="@+id/llRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/rlInfo"
            android:layout_alignLeft="@id/iv_headImg"
            android:layout_marginRight="@dimen/margin_70"
            >
            <LinearLayout
                android:id="@+id/layout_video"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/button_popu_viode"
                    />
                <TextView
                    android:id="@+id/tv_video"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="视频通话"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textSize="@dimen/text_size_11"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_4D6B4A"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"

                >
                <ImageView
                    android:id="@+id/iv_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="5dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/button_popu_voice"
                    />
                <TextView
                    android:id="@+id/tv_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="语音通话"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textSize="@dimen/text_size_11"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_4D6B4A"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="取消收藏"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textSize="@dimen/text_size_11"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_4D6B4A"
                    />
            </LinearLayout>

        </LinearLayout>



    <TextView
        android:id="@+id/tv_close"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@drawable/shape_top_gray_10"
        android:text="取消"
        android:gravity="center"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/color_A6A6A6"
        android:layout_below="@id/llRoot"
        />
</RelativeLayout>