<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp10"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp15"
    android:paddingTop="@dimen/dp22"
    android:paddingRight="@dimen/dp15"
    android:paddingBottom="@dimen/dp22">

    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_28282D"
        android:textSize="@dimen/size_sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="广东省销售中心总结会" />

    <TextView
        android:id="@+id/tv_room_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/room_sum_person"
        android:drawablePadding="@dimen/dp10"
        android:textColor="@color/color_ffadb0b5"
        android:textSize="@dimen/min_sp_12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_room_code"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginRight="@dimen/dp20"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@id/tv_room_name"
        app:layout_constraintRight_toLeftOf="@id/tv_room_time"
        app:layout_constraintTop_toTopOf="@id/tv_room_code"
        tools:text="20/50" />

    <TextView
        android:id="@+id/tv_room_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/room_info_time"
        android:drawablePadding="@dimen/dp10"
        android:textColor="@color/color_ffadb0b5"
        android:textSize="@dimen/min_sp_12"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/tv_room_code"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/tv_room_user"
        app:layout_constraintRight_toLeftOf="@id/tv_room_code"
        app:layout_constraintTop_toTopOf="@id/tv_room_code"
        tools:text="01-12 09:00  01-12 09:00" />

    <TextView
        android:id="@+id/tv_room_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="@dimen/dp10"
        android:textColor="@color/color_ffadb0b5"
        android:textSize="@dimen/min_sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/tv_room_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_room_name"
        app:layout_goneMarginLeft="0dp"
        tools:text="会议号：123-456-789" />
</androidx.constraintlayout.widget.ConstraintLayout>