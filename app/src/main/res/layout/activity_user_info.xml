<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_FFFFFF">


    <com.sdcz.endpass.widget.TitleBarView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        app:backDrawbles="@drawable/icon_left_gray"
        app:leftTexts="@string/user_info"
        app:themeColors="@color/color_FFFFFF"
        />

    <LinearLayout
        android:id="@+id/llRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_mine_head"
            android:layout_margin="@dimen/margin_3"
            >
            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/width_98"
                android:layout_height="@dimen/height_98"
                android:src="@drawable/icon_head"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:src="@drawable/icon_camera"
                android:layout_alignBottom="@id/iv_head"
                android:layout_alignRight="@id/iv_head"
                android:layout_marginRight="@dimen/margin_13"
                />

            <EditText
                android:id="@+id/etNikeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_21"
                android:background="@null"
                android:longClickable="false"
                android:text="@string/user"
                android:textColor="@color/color_595959"
                android:textSize="@dimen/text_size_15" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:background="@drawable/bg_mine_body"
            android:orientation="horizontal"
            android:padding="@dimen/padding_15"
            >

            <LinearLayout
                android:layout_width="@dimen/width_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/padding_15"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_0"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:text="账号"
                    android:textSize="@dimen/text_size_15"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textColor="@color/color_8C8C8C"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_0"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:text="部门"
                    android:textSize="@dimen/text_size_15"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textColor="@color/color_8C8C8C"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_0"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:text="联系电话"
                    android:textSize="@dimen/text_size_15"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:textColor="@color/color_8C8C8C"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/width_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/padding_15"
                android:orientation="vertical"
                >


                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_0"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_15"
                    android:gravity="left|center"
                    android:background="@null"
                    android:textColor="@color/color_595959"
                    android:text="1231"
                    />

                <TextView
                    android:id="@+id/tvDeptName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_0"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_595959"
                    android:gravity="left|center"
                    android:text="1231"

                    />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_0"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_15"
                    android:gravity="left|center"
                    android:background="@null"
                    android:textColor="@color/color_595959"
                    android:text="1231"
                    />

            </LinearLayout>



        </LinearLayout>

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_green_20"
            android:textColor="@color/color_FFFFFF"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_gravity="bottom"
            android:text="完成"
            />

    </LinearLayout>

</LinearLayout>