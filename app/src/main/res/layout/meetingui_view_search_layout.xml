<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp32"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/meetingui_shape_search"
    android:paddingStart="@dimen/dp12"
    android:paddingEnd="@dimen/dp8"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="234"
        android:background="@null"
        android:drawableStart="@mipmap/meetingui_search_icon_zoom"
        android:drawablePadding="10dp"
        android:hint="@string/meetingui_search"
        android:textColorHint="#BBBEC3"
        android:gravity="start|center_vertical"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="234"
        android:background="@null"
        android:textCursorDrawable="@drawable/meetingui_cursor_drawable"
        android:drawableStart="@mipmap/meetingui_search_icon_zoom"
        android:drawablePadding="10dp"
        android:textColorHint="#BBBEC3"
        android:gravity="start|center_vertical"
        android:imeOptions="actionSearch"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/iv_clear_text"
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp8"
        android:background="@color/color_transparent"
        android:src="@mipmap/meetingui_search_icon_clear"/>

</LinearLayout>