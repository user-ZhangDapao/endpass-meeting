<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llMenu"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/width_21"
            android:layout_height="@dimen/height_21"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_16" />

        <TextView
            android:id="@+id/text"
            android:textSize="@dimen/text_size_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/height_6"
            android:layout_marginTop="@dimen/height_2"
            android:textColor="@color/tab_text" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlTip"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_13"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_width="@dimen/width_16"
        android:layout_height="@dimen/height_16">
        <ImageView
            android:id="@+id/redPointNum"
            android:visibility="visible"
            android:src="@drawable/red_dots"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/width_16"
            android:layout_height="@dimen/height_16" />
        <TextView
            android:id="@+id/tvRedNum"
            android:text="1"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

<!--    大小为16dp-->
    <ImageView
        android:id="@+id/redPoint"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_toEndOf="@+id/llMenu"
        android:src="@drawable/red_dots"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/width_5"
        android:layout_height="@dimen/height_5" />

</RelativeLayout>