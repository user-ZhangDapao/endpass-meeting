<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_maillist_user"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/color_FFFFFF"
    >

    <RelativeLayout
        android:id="@+id/rl_maillist_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_online"
            android:layout_width="@dimen/width_9"
            android:layout_height="@dimen/height_9"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_10" />

        <ImageView
            android:id="@+id/ivHead"
            android:layout_width="@dimen/width_32"
            android:layout_height="@dimen/height_32"
            android:layout_toRightOf="@id/iv_online"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_head"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/ivHead"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_15"
            android:ellipsize="middle"
            android:singleLine="true"
            android:maxWidth="@dimen/width_150"
            />

        <TextView
            android:id="@+id/tvClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_name"
            android:textColor="#313131"
            android:textSize="15sp"
            android:ellipsize="middle"
            android:singleLine="true"
            android:maxWidth="@dimen/width_100"
            />

        <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_A6A6A6"
            android:textSize="@dimen/text_size_13"
            android:ellipsize="middle"
            android:singleLine="true"
            android:maxWidth="@dimen/width_100"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#FFF55030"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="删除"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp" />


</LinearLayout>