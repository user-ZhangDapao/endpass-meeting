<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_content_view"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/shape_global_popup_bg"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintDimensionRatio="W,4:5.5"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:focusable="true"
    android:clickable="true"
    app:layout_constraintWidth_percent="0.68">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meetingui_remind"
        android:textColor="@color/color_28282D"
        android:textSize="@dimen/text_size_20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view_division_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_28282D"
        android:textSize="@dimen/text_size_16sp"
        android:gravity="center"
        android:paddingStart="@dimen/dp20"
        android:paddingEnd="@dimen/dp20"
        app:layout_constraintBottom_toTopOf="@+id/view_division_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/select_button_shadow_left"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/meetingui_cancel"
        android:textColor="@color/color_28282D"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/view_division_2"
        app:layout_constraintTop_toTopOf="@+id/view_division_1" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/select_button_shadow_right"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/meetingui_confirm"
        android:textColor="@color/color_409CF9"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/view_division_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_division_1" />





    <View
        android:id="@+id/view_division_1"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@color/color_ECEDEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72" />

    <View
        android:id="@+id/view_division_2"
        android:layout_width="0.75dp"
        android:layout_height="0dp"
        android:background="@color/color_ECEDEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_division_1" />
</androidx.constraintlayout.widget.ConstraintLayout>
