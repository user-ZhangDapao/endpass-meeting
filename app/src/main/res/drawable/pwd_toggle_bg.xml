<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/visible" android:drawable="@drawable/edit_text_pwd_show" android:state_checked="true" />

    <item android:id="@+id/masked" android:drawable="@drawable/edit_text_pwd_hide" />

    <transition android:drawable="@drawable/edit_text_pwd_show" android:fromId="@id/masked" android:toId="@id/visible" />

    <transition android:drawable="@drawable/edit_text_pwd_hide" android:fromId="@id/visible" android:toId="@id/masked" />

</selector>